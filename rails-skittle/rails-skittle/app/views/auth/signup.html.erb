<div class="container">
  <div class="content">

    <div class="left">

      <h1 class="page_title">  s i g n u p  </h1>

    </div>

    <div class="user_auth">

      <div id="signup">
        <%= form_tag(:action => 'create') do %>
          <p>Username:</br> <%= text_field_tag :name %></p>
          <p>Email:</br> <%= text_field_tag :email %></p>
          <p>Password:</br> <%= password_field_tag :password %></p>
          <p>Confirm Password:</br> <%= password_field_tag :password_confirmation %></p>
          <%= submit_tag("Login") %>
        <% end %>
      </div>

    </div>

  </div>
</div>